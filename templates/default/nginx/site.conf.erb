<% if @site['ssl'] %>
server {
  server_name <%= @site['server_names'].join(' ') %>;
  listen 443;

<%= render 'nginx/ssl.conf.erb', :variables => {
  cert_path: File.join(@site['root'], 'ssl', 'certs', "#{@name}.pem"),
  key_path: File.join(@site['root'], 'ssl', 'keys', "#{@name}.key")
} %>

<%= render 'nginx/gzip.conf.erb' %>
}

<% end %>
server {
  server_name <%= @site['server_names'].join(' ') %>;
  listen 80;

<%= render 'nginx/gzip.conf.erb' %>
}
